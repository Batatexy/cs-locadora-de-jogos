@model LocadoraDejogos.Models.Alugueis

@{
    ViewData["Title"] = "Deletar Aluguel";
}
<br />
<br />
<br />

<h4>Alugueis</h4>
<h3>Tem certeza que deseja apagar este dado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clientes.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jogos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jogos.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Funcionarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcionarios.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <button type="button" class="btn btn-secondary">
            <a asp-action="Index" class="remove-link">
                Voltar para Alugueis
            </a>
        </button>

        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Deletar Aluguel" class="btn btn-danger" /> 
    </form>
</div>

<br />