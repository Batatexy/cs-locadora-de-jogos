@model LocadoraDejogos.Models.Alugueis

@{
    ViewData["Title"] = "Detalhes";
}

<br />
<br />
<br />

<div>
    <h4>Alugueis</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clientes.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jogos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jogos.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Funcionarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcionarios.ID)
        </dd>
    </dl>
</div>

<div class="form-group">

    <a asp-action="Index" class="remove-link">
        <button type="button" class="btn btn-secondary">
            Voltar para Alugueis
        </button>
    </a>

    <a asp-action="Edit" asp-route-id="@Model?.ID" style="color: inherit; text-decoration: none;">
        <button type="button" class="btn btn-info">
            Editar Aluguel
        </button>
    </a>
</div>

<br />