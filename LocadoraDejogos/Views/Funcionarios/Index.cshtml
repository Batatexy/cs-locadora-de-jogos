@model IEnumerable<LocadoraDejogos.Models.Funcionarios>

@{
    ViewData["Title"] = "Funcionários";
}

<br />
<br />

<! Botões de criar, editar, detalhes e delete –>
<div class="botoes">

    <button type="button" class="btn btn-outline-primary">
        <h4 class="remove-margin">Funcionários</h4>
    </button>


    <button type="button" class="btn btn-outline-primary" onclick="redirecionarPagina('Funcionarios','0', 0)">
        Adicionar um Funcionário
    </button>

    <button type="button" class="btn btn-outline-primary" onclick="redirecionarPagina('Funcionarios','edit', 1)">
        Editar
    </button>

    <button type="button" class="btn btn-outline-primary" onclick="redirecionarPagina('Funcionarios','details', 1)">
        Detalhes
    </button>

    <button type="button" class="btn btn-outline-primary" onclick="redirecionarPagina('Funcionarios','delete', 1)">
        Deletar
    </button>
</div>

<br />
<br />
<br />

<table class="table">
    <thead>
        <div class="tabela funcionarios">
            <ul class="linha remove-margin ">
                <li>@Html.DisplayNameFor(model => model.Login)</li>
                <li>@Html.DisplayNameFor(model => model.Senha)</li>
                <li>@Html.DisplayNameFor(model => model.CPF)</li>
                <li>@Html.DisplayNameFor(model => model.Nome)</li>
                <li>@Html.DisplayNameFor(model => model.DataNascimento)</li>
            </ul>
        </div>
    </thead>

    <tbody>
        @foreach (var item in Model) 
        {
            <button type="button" class="btn btn-outline-primary" onclick="atualizarItemClickado(@item.ID)" style="width:100%">
                <div class="tabela funcionarios">
                    <ul class="linha remove-margin">
                        <li>@Html.DisplayFor(modelItem => item.Login)</li>
                        <li>@Html.DisplayFor(modelItem => item.Senha)</li>
                        <li>@Html.DisplayFor(modelItem => item.CPF)</li>
                        <li>@Html.DisplayFor(modelItem => item.Nome)</li>
                        <li>@Html.DisplayFor(modelItem => item.DataNascimento)</li>
                    </ul>
                </div>
            </button>


        }
    </tbody>
</table>
