@model LocadoraDejogos.Models.Consoles

@{
    ViewData["Title"] = "Adicionar Console";
}

<br />
<br />
<br />

<h4>Consoles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImagemURL" class="control-label"></label>
                <input asp-for="ImagemURL" class="form-control" />
                <span asp-validation-for="ImagemURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WikipediaURL" class="control-label"></label>
                <input asp-for="WikipediaURL" class="form-control" />
                <span asp-validation-for="WikipediaURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geracao" class="control-label"></label>
                <input asp-for="Geracao" class="form-control" />
                <span asp-validation-for="Geracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:6px">
                <button type="button" class="btn btn-secondary">
                    <a asp-action="Index" class="remove-link">
                        Voltar para Consoles
                    </a>
                </button>

                <input type="submit" value="Adicionar Console" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br />


