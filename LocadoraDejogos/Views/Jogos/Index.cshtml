@model IEnumerable<LocadoraDejogos.Models.Jogos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CapaURL)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desenvolvedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distribuidora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JogosConsolesID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consoles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>




@foreach (var item in Model) {
        <tr class="linha" data-background-url="@Html.DisplayFor(modelItem => item.FundoURL)">
            <td>

                <a href="@Html.DisplayFor(modelItem => item.LojaURL)">
                    <img src="@Html.DisplayFor(modelItem => item.CapaURL)" style="width:100px; height:auto;" />
                </a>
                
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desenvolvedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distribuidora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JogosConsolesID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consoles.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

